{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Svelte",
  "extends": "./base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ]
  }
}
