{
	"name": "@spectacular/skeleton",
	"description": "Shared skeleton UI components",
	"type": "module",
	"module": "./components/index.ts",
	"main": "./components/index.ts",
	"svelte": "./components/index.ts",
	"sideEffects": false,
	"exports": {
		".": {
			"svelte": "./components/index.ts"
		},
		"./components": {
			"default": "./components/index.ts"
		},
		"./components/*": {
			"default": "./components/*"
		},
		"./utils": {
			"default": "./utils/index.ts"
		},
		"./default": {
			"default": "./styles/default.pcss"
		},
		"./postcss.config": {
			"default": "./postcss.config.cjs"
		},
		"./tailwind.config": {
			"default": "./tailwind.config.ts"
		}
	},
	"scripts": {
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write . && eslint --fix .",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@floating-ui/dom": "1.5.3",
		"@fontsource-variable/inter": "5.0.16",
		"@playwright/test": "1.40.1",
		"@skeletonlabs/skeleton": "2.6.1",
		"@skeletonlabs/tw-plugin": "0.3.0",
		"@spectacular/eslint-config": "workspace:*",
		"@spectacular/prettier-config": "workspace:*",
		"@spectacular/typescript-config": "workspace:*",
		"@spectacular/utils": "workspace:*",
		"@tailwindcss/container-queries": "0.1.1",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/line-clamp": "0.4.4",
		"@tailwindcss/typography": "0.5.10",
		"@tsconfig/svelte": "5.0.2",
		"@types/node": "20.10.6",
		"@vincjo/datatables": "1.14.2",
		"autoprefixer": "10.4.16",
		"clsx": "2.1.0",
		"cssnano": "6.0.2",
		"formsnap": "0.4.2",
		"lucide-svelte": "0.303.0",
		"postcss": "8.4.32",
		"postcss-import": "15.1.0",
		"postcss-load-config": "5.0.2",
		"sveltekit-superforms": "1.13.1",
		"tailwind-merge": "2.2.0",
		"tailwind-variants": "0.1.19",
		"tailwindcss": "3.4.0",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"vite": "5.0.10",
		"vitest": "1.1.0"
	}
}
