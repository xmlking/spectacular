{
  "name": "@spectacular/skeleton",
  "description": "Shared skeleton UI components",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#utils": "./src/utils/index.js",
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./src/components/index.ts",
      "svelte": "./src/components/index.ts",
      "default": "./src/components/index.ts"
    },
    "./actions": "./src/actions/index.ts",
    "./actions/*": "./src/actions/*.ts",
    "./transitions": "./src/transitions/index.ts",
    "./transitions/*": "./src/transitions/*.ts",
    "./components": "./src/components/index.ts",
    "./components/*": "./src/components/*/index.ts",
    "./utils": "./src/utils/index.ts",
    "./styles/default": "./styles/default.pcss",
    "./postcss.config": "./postcss.config.cjs",
    "./tailwind.config": "./tailwind.config.ts"
  },
  "scripts": {
    "clean": "git clean -xdf",
    "format": "biome format --write",
    "lint": "biome lint",
    "test": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@floating-ui/dom": "1.6.12",
    "@fontsource-variable/inter": "5.1.0",
    "@skeletonlabs/skeleton": "2.10.3",
    "@skeletonlabs/tw-plugin": "0.4.0",
    "@spectacular/biome-config": "workspace:*",
    "@spectacular/typescript-config": "workspace:*",
    "@spectacular/utils": "workspace:*",
    "@sveltejs/kit": "2.8.1",
    "@tailwindcss/container-queries": "0.1.1",
    "@tailwindcss/forms": "0.5.9",
    "@tailwindcss/line-clamp": "0.4.4",
    "@tailwindcss/typography": "0.5.15",
    "@tsconfig/svelte": "5.0.4",
    "@types/node": "22.9.0",
    "@vincjo/datatables": "1.14.10",
    "@vitest/coverage-v8": "2.1.5",
    "autoprefixer": "10.4.20",
    "bits-ui": "0.21.16",
    "clsx": "2.1.1",
    "cssnano": "7.0.6",
    "date-fns": "4.1.0",
    "formsnap": "1.0.1",
    "graphql": "16.9.0",
    "lucide-svelte": "0.456.0",
    "postcss": "8.4.49",
    "postcss-import": "16.1.0",
    "postcss-load-config": "6.0.1",
    "svelte": "4.2.19",
    "sveltekit-superforms": "2.20.0",
    "tailwind-merge": "2.5.4",
    "tailwind-variants": "0.3.0",
    "tailwindcss": "3.4.14",
    "tslib": "2.8.1",
    "typescript": "5.6.3",
    "vite": "5.4.11",
    "vitest": "2.1.5",
    "zod": "3.23.8"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^4.0.0"
  }
}
