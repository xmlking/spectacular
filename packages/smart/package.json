{
  "name": "@spectacular/smart",
  "description": "Smart UI components for svelte",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#utils": "./src/utils/index.js",
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./src/components/index.ts",
      "svelte": "./src/components/index.ts",
      "default": "./src/components/index.ts"
    },
    "./actions": "./src/actions/index.ts",
    "./actions/*": "./src/actions/*.ts",
    "./components": "./src/components/index.ts",
    "./components/*": "./src/components/*/index.ts"
  },
  "scripts": {
    "clean": "git clean -xdf",
    "format": "biome format --write",
    "lint": "biome lint",
    "test": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@ai-sdk/svelte": "1.0.3",
    "@aibrow/dom-types": "1.2.1",
    "@floating-ui/dom": "1.6.12",
    "@skeletonlabs/skeleton": "2.10.3",
    "@spectacular/biome-config": "workspace:*",
    "@spectacular/skeleton": "workspace:*",
    "@spectacular/typescript-config": "workspace:*",
    "@spectacular/utils": "workspace:*",
    "@svelte-plugins/datepicker": "1.0.9",
    "@sveltejs/kit": "2.8.5",
    "@tsconfig/svelte": "5.0.4",
    "@types/dom-chromium-ai": "0.0.4",
    "@types/node": "22.10.1",
    "@vitest/coverage-v8": "2.1.6",
    "ai": "4.0.9",
    "chrome-ai": "1.11.1",
    "date-fns": "4.1.0",
    "formsnap": "1.0.1",
    "lucide-svelte": "0.462.0",
    "svelte": "5.2.10",
    "svelte-check": "4.1.0",
    "svelte-select": "5.8.3",
    "sveltekit-superforms": "2.20.1",
    "tailwind-merge": "2.5.5",
    "tailwind-variants": "0.3.0",
    "tailwindcss": "3.4.15",
    "tslib": "2.8.1",
    "typescript": "5.7.2",
    "vite": "5.4.11",
    "vitest": "2.1.6",
    "zod": "3.23.8"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^4.0.0"
  }
}
