{
  "name": "@spectacular/smart",
  "description": "Smart UI components for svelte",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#utils": "./src/utils/index.js",
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./src/components/index.ts",
      "svelte": "./src/components/index.ts",
      "default": "./src/components/index.ts"
    },
    "./actions": "./src/actions/index.ts",
    "./actions/*": "./src/actions/*.ts",
    "./components": "./src/components/index.ts",
    "./components/*": "./src/components/*/index.ts"
  },
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "clean": "git clean -xdf",
    "format": "biome format --write",
    "lint": "biome lint",
    "test": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@ai-sdk/svelte": "1.0.10",
    "@aibrow/dom-types": "1.3.5",
    "@floating-ui/dom": "1.6.13",
    "@inlang/paraglide-sveltekit": "0.15.5",
    "@skeletonlabs/skeleton": "2.10.4",
    "@spectacular/biome-config": "workspace:*",
    "@spectacular/skeleton": "workspace:*",
    "@spectacular/typescript-config": "workspace:*",
    "@spectacular/utils": "workspace:*",
    "@svelte-plugins/datepicker": "1.0.9",
    "@sveltejs/kit": "2.15.2",
    "@sveltejs/vite-plugin-svelte": "3.1.2",
    "@tsconfig/svelte": "5.0.4",
    "@types/dom-chromium-ai": "0.0.4",
    "@types/node": "22.10.6",
    "@vitest/coverage-v8": "2.1.8",
    "ai": "4.0.34",
    "chrome-ai": "1.11.1",
    "date-fns": "4.1.0",
    "formsnap": "1.0.1",
    "gjp-4-gpt": "0.0.8",
    "lucide-svelte": "0.471.0",
    "svelte": "4.2.19",
    "svelte-check": "4.1.4",
    "svelte-select": "5.8.3",
    "sveltekit-superforms": "2.22.1",
    "tailwind-merge": "2.6.0",
    "tailwind-variants": "0.3.0",
    "tailwindcss": "3.4.17",
    "tslib": "2.8.1",
    "typescript": "5.7.3",
    "vite": "5.4.11",
    "vitest": "2.1.8",
    "zod": "3.24.1"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^4.0.0"
  }
}
