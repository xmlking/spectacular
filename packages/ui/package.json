{
	"name": "@spectacular/ui",
	"description": "Styles and components for use in svelte websites",
	"version": "0.0.0",
	"type": "module",
	"types": "src/index.ts",
	"svelte": "src/index.ts",
	"module": "src/index.ts",
	"scripts": {
		"lint:js": "eslint .",
		"lint:prettier": "prettier --check --ignore-path=../../.prettierignore .",
		"lint": "concurrently pnpm:lint:*",
		"format:js": "eslint --fix .",
		"format:prettier": "prettier --write --ignore-path=../../.prettierignore .",
		"format": "concurrently pnpm:format:*"
	},
	"exports": {
		"./package.json": "./package.json",
		".": "./src/index.ts",
		"./skeleton": "./src/lib/components/skeleton/index.ts",
		"./flowbite": "./src/lib/components/flowbite/index.ts",
		"./shadcn/*": "./src/lib/components/ui/*/index.ts"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@floating-ui/dom": "1.5.3",
		"@playwright/test": "1.40.1",
		"@skeletonlabs/skeleton": "2.6.1",
		"@skeletonlabs/tw-plugin": "0.3.0",
		"@sveltejs/adapter-auto": "3.0.1",
		"@sveltejs/kit": "2.0.6",
		"@sveltejs/package": "2.2.4",
		"bits-ui": "0.11.8",
		"clsx": "2.0.0",
		"@spectacular/eslint-config": "workspace:*",
		"lucide-svelte": "0.300.0",
		"publint": "0.2.7",
		"svelte": "4.2.8",
		"svelte-check": "3.6.2",
		"sveltekit-superforms": "1.13.1",
		"@spectacular/tailwind-config": "workspace:*",
		"tailwind-merge": "2.2.0",
		"tailwind-variants": "0.1.19",
		"tailwindcss": "3.4.0",
		"@spectacular/tsconfig": "workspace:*",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"vite": "5.0.10",
		"vitest": "1.1.0"
	},
	"publishConfig": {
		"svelte": "./dist/index.js",
		"files": [
			"dist"
		],
		"exports": {
			"./package.json": "./package.json",
			".": "./dist/index.js"
		},
		"types": "./dist/index.d.ts"
	}
}
