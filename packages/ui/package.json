{
  "name": "@spectacular/ui",
  "description": "Shared shadcn UI components",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "svelte": "./index.ts",
      "default": "./index.ts"
    },
    "./actions": "./src/actions/index.ts",
    "./actions/*": "./src/actions/*.ts",
    "./transitions": "./src/transitions/index.ts",
    "./transitions/*": "./src/transitions/*.ts",
    "./components/*": "./src/components/ui/*/index.ts",
    "./utils": "./src/utils.ts",
    "./hooks/*": "./src/hooks/*",
    "./styles/default": "./styles/default.pcss",
    "./styles/theme": "./styles/theme.pcss",
    "./postcss.config": "./postcss.config.js",
    "./tailwind.config": "./tailwind.config.ts"
  },
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "clean": "git clean -xdf",
    "prepare": "svelte-kit sync",
    "sync": "svelte-kit sync",
    "format": "biome format --write",
    "lint": "biome lint",
    "test": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "ui:add": "pnpx shadcn-svelte@next add",
    "ui:update": "pnpx shadcn-svelte@next update"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "svelte-persisted-store": "0.12.0",
    "svelte-radix": "2.0.1",
    "tailwind-merge": "3.1.0",
    "tailwind-variants": "1.0.0",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@internationalized/date": "3.7.0",
    "@spectacular/biome-config": "workspace:*",
    "@spectacular/typescript-config": "workspace:*",
    "@spectacular/utils": "workspace:*",
    "@sveltejs/adapter-auto": "6.0.0",
    "@sveltejs/kit": "2.20.3",
    "@sveltejs/vite-plugin-svelte": "5.0.3",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/container-queries": "0.1.1",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/typography": "0.5.16",
    "@tanstack/table-core": "8.21.2",
    "@tsconfig/svelte": "5.0.4",
    "@types/node": "22.14.0",
    "@vitest/coverage-v8": "3.1.1",
    "autoprefixer": "10.4.21",
    "bits-ui": "1.3.16",
    "cssnano": "7.0.6",
    "embla-carousel-svelte": "8.5.2",
    "formsnap": "2.0.0",
    "lucide-svelte": "0.487.0",
    "mode-watcher": "0.5.1",
    "paneforge": "1.0.0-next.4",
    "postcss-import": "16.1.0",
    "postcss-load-config": "6.0.1",
    "svelte": "5.25.7",
    "svelte-check": "4.1.5",
    "svelte-sonner": "0.3.28",
    "sveltekit-superforms": "2.24.0",
    "tailwindcss": "4.1.2",
    "typescript": "5.8.2",
    "vaul-svelte": "1.0.0-next.6",
    "vite": "6.2.5",
    "vitest": "3.1.1",
    "zod": "3.24.2"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  }
}
