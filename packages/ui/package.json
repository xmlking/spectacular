{
	"name": "ui",
	"description": "Styles and components for use in svelte websites",
	"version": "0.0.0",
	"type": "module",
	"svelte-ori": "./dist/index.js",
	"types-ori": "./dist/index.d.ts",
	"types": "src/index.ts",
	"svelte": "src/index.ts",
	"module": "src/index.ts",
	"license": "MIT",
	"scripts": {
		"//": "TODO: build not working ",
		"//build": "vite build && pnpm run package",
		"package": "svelte-kit sync && svelte-package && publint",
		"#package": "svelte-kit sync && svelte-package && publint && tsx --esm ./scripts/cleanupPackage.ts && rm ./dist/package.json",
		"prepublishOnly": "pnpm run package",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test": "concurrently pnpm:test:*",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint:markup": "markuplint --config ../../.markuplintrc.cjs \"**\"",
		"lint:js": "eslint .",
		"lint:prettier": "prettier --check --ignore-path=../../.prettierignore .",
		"lint": "concurrently pnpm:lint:*",
		"format:js": "eslint --fix .",
		"format:prettier": "prettier --write --ignore-path=../../.prettierignore .",
		"format": "concurrently pnpm:format:*"
	},
	"exports-ori": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files-ori": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		"./package.json": "./package.json",
		".": "./src/index.ts",
		"./components/*": "./src/lib/components/*/index.ts",
		"./components/shadcn/*": "./src/lib/components/ui/*/index.ts",
		"./components/skeleton/*": "./src/lib/components/skeleton/*/index.ts",
		"./components/flowbite/*": "./src/lib/components/flowbite/*/index.ts"
	},
	"peerDependencies": {
		"svelte": "4.0.0"
	},
	"devDependencies": {
		"@floating-ui/dom": "1.5.3",
		"@playwright/test": "1.40.1",
		"@skeletonlabs/skeleton": "2.6.1",
		"@skeletonlabs/tw-plugin": "0.3.0",
		"@sveltejs/adapter-auto": "3.0.1",
		"@sveltejs/kit": "2.0.6",
		"@sveltejs/package": "2.2.4",
		"bits-ui": "0.11.8",
		"clsx": "2.0.0",
		"eslint-config-custom": "workspace:*",
		"lucide-svelte": "0.300.0",
		"publint": "0.2.6",
		"svelte": "4.2.8",
		"svelte-check": "3.6.2",
		"tailwind-config": "workspace:*",
		"tailwind-merge": "2.2.0",
		"tailwind-variants": "0.1.19",
		"tailwindcss": "3.4.0",
		"tsconfig": "workspace:*",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"vite": "5.0.10",
		"vitest": "1.1.0"
	},
	"publishConfig": {
		"svelte": "./dist/index.js",
		"files": [
			"dist"
		],
		"exports": {
			"./package.json": "./package.json",
			".": "./dist/index.js"
		},
		"types": "./dist/index.d.ts"
	}
}
