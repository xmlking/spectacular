{
  "name": "@spectacular/ui",
  "description": "Shared shadcn UI components",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "svelte": "./index.ts",
      "default": "./index.ts"
    },
    "./components/*": "./src/components/ui/*/index.ts",
    "./utils": "./src/utils.ts",
    "./styles/default": "./styles/default.pcss",
    "./styles/theme": "./styles/theme.pcss",
    "./postcss.config": "./postcss.config.js",
    "./tailwind.config": "./tailwind.config.ts"
  },
  "scripts": {
    "clean": "git clean -xdf",
    "format": "biome format --write",
    "lint": "biome lint",
    "test": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "ui:add": "pnpx shadcn-svelte@next add"
  },
  "dependencies": {
    "@internationalized/date": "3.5.6",
    "bits-ui": "1.0.0-next.38",
    "clsx": "2.1.1",
    "lucide-svelte": "0.454.0",
    "mode-watcher": "0.4.1",
    "svelte-check": "4.0.5",
    "svelte-persisted-store": "0.12.0",
    "svelte-radix": "2.0.1",
    "svelte-sonner": "0.3.28",
    "tailwind-merge": "2.5.4",
    "tailwind-variants": "0.2.1",
    "tailwindcss": "3.4.14",
    "tailwindcss-animate": "1.0.7",
    "typescript": "5.6.3",
    "vaul-svelte": "1.0.0-next.1"
  },
  "devDependencies": {
    "@inlang/paraglide-sveltekit": "0.11.5",
    "@spectacular/biome-config": "workspace:*",
    "@spectacular/typescript-config": "workspace:*",
    "@sveltejs/kit": "2.7.4",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/container-queries": "0.1.1",
    "@tailwindcss/forms": "0.5.9",
    "@tailwindcss/typography": "0.5.15",
    "@tsconfig/svelte": "5.0.4",
    "@types/node": "22.8.6",
    "@vitest/coverage-v8": "2.1.4",
    "autoprefixer": "10.4.20",
    "cssnano": "7.0.6",
    "postcss-import": "16.1.0",
    "postcss-load-config": "6.0.1",
    "svelte": "5.1.9",
    "tailwindcss": "3.4.14",
    "typescript": "5.6.3",
    "vite": "5.4.10",
    "vitest": "2.1.4"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "svelte": "^5.0.0"
  }
}
