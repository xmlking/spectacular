{
  "name": "@spectacular/ui",
  "description": "Shared shadcn UI components",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "svelte": "./index.ts",
      "default": "./index.ts"
    },
    "./components/*": "./src/components/ui/*/index.ts",
    "./utils": "./src/utils.ts",
    "./styles/default": "./styles/default.pcss",
    "./styles/theme": "./styles/theme.pcss",
    "./postcss.config": "./postcss.config.cjs",
    "./tailwind.config": "./tailwind.config.ts"
  },
  "scripts": {
    "format": "biome check --apply .",
    "lint": "biome check .",
    "test": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "ui:add": "pnpx shadcn-svelte@latest add"
  },
  "dependencies": {
    "@internationalized/date": "3.5.3",
    "bits-ui": "0.21.8",
    "clsx": "2.1.1",
    "cmdk-sv": "0.0.17",
    "embla-carousel-svelte": "8.1.2",
    "formsnap": "1.0.0",
    "lucide-svelte": "0.378.0",
    "mode-watcher": "0.3.0",
    "paneforge": "0.0.4",
    "svelte-radix": "1.1.0",
    "svelte-sonner": "0.3.24",
    "sveltekit-superforms": "2.13.1",
    "swiper": "11.1.3",
    "tailwind-merge": "2.3.0",
    "tailwind-variants": "0.2.1",
    "vaul-svelte": "0.3.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@spectacular/biome-config": "workspace:*",
    "@spectacular/typescript-config": "workspace:*",
    "@tailwindcss/typography": "0.5.13",
    "@tsconfig/svelte": "5.0.4",
    "@types/node": "20.12.12",
    "@vitest/coverage-v8": "1.6.0",
    "cssnano": "7.0.1",
    "postcss-import": "16.1.0",
    "postcss-load-config": "5.1.0",
    "tailwindcss": "3.4.3",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^4.0.0"
  }
}
