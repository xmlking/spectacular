{
	"name": "@spectacular/ui",
	"description": "Shared shadcn UI components",
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"types": "./index.d.ts"
		},
		"./components/*": "./components/*/index.ts",
		"./utils": {
			"default": "./utils/index.ts"
		},
		"./default": {
			"default": "./styles/default.pcss"
		},
		"./theme": {
			"default": "./styles/theme.pcss"
		},
		"./postcss.config": {
			"default": "./postcss.config.cjs"
		},
		"./tailwind.config": {
			"default": "./tailwind.config.ts"
		}
	},
	"types": "./index.d.ts",
	"scripts": {
		"format": "prettier --write . && eslint --fix .",
		"lint": "prettier --check . && eslint .",
		"ui:add": "pnpx shadcn-svelte@latest add"
	},
	"dependencies": {
		"@internationalized/date": "3.5.2",
		"bits-ui": "0.19.5",
		"clsx": "2.1.0",
		"cmdk-sv": "0.0.15",
		"formsnap": "0.5.1",
		"lucide-svelte": "0.349.0",
		"sveltekit-superforms": "2.8.0",
		"swiper": "11.0.7",
		"tailwind-merge": "2.2.1",
		"tailwind-variants": "0.2.0",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@spectacular/eslint-config": "workspace:*",
		"@spectacular/typescript-config": "workspace:*",
		"@tailwindcss/typography": "0.5.10",
		"@tsconfig/svelte": "5.0.2",
		"@types/node": "20.11.25",
		"@typescript-eslint/eslint-plugin": "7.1.1",
		"@typescript-eslint/parser": "7.1.1",
		"cssnano": "6.1.0",
		"eslint": "8.57.0",
		"postcss-import": "16.0.1",
		"postcss-load-config": "5.0.3",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.2.2",
		"prettier-plugin-tailwindcss": "0.5.12",
		"tailwindcss": "3.4.1",
		"typescript": "5.4.2"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0"
	}
}
