{
	"name": "@spectacular/ui",
	"description": "Shared shadcn UI components",
	"type": "module",
	"types": "./index.d.ts",
	"exports": {
		".": {
			"types": "./index.d.ts"
		},
		"./components/*": "./components/*/index.ts",
		"./utils": {
			"default": "./utils/index.ts"
		},
		"./default": {
			"default": "./styles/default.pcss"
		},
		"./theme": {
			"default": "./styles/theme.pcss"
		},
		"./postcss.config": {
			"default": "./postcss.config.cjs"
		},
		"./tailwind.config": {
			"default": "./tailwind.config.ts"
		}
	},
	"scripts": {
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write . && eslint --fix .",
		"ui:add": "pnpx shadcn-svelte@latest add"

	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0"
	},
	"dependencies": {
		"clsx": "2.0.0",
		"lucide-svelte": "0.302.0",
		"swiper": "11.0.5",
		"tailwind-merge": "2.2.0",
		"tailwind-variants": "0.1.19",
		"@internationalized/date": "3.5.1",
		"bits-ui": "0.11.8",
		"cmdk-sv": "0.0.12",
		"formsnap": "0.4.1",
		"sveltekit-superforms": "1.13.1",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@spectacular/eslint-config": "workspace:*",
		"@spectacular/typescript-config": "workspace:*",
		"@tsconfig/svelte": "5.0.2",
		"@typescript-eslint/eslint-plugin": "6.15.0",
		"@typescript-eslint/parser": "6.15.0",
		"postcss-import": "15.1.0",
		"postcss-load-config": "5.0.2",
		"eslint": "8.56.0",
		"prettier": "3.1.1",
		"prettier-plugin-svelte": "3.1.2",
		"prettier-plugin-tailwindcss": "0.5.9",
		"tailwindcss": "3.4.0",
		"@tailwindcss/typography": "0.5.10",
		"typescript": "5.3.3"
	}
}
