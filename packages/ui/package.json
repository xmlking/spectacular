{
	"name": "@spectacular/ui",
	"description": "Shared shadcn UI components",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#*": "./src/*"
	},
	"exports": {
		".": {
			"types": "./index.ts",
			"svelte": "./index.ts",
			"default": "./index.ts"
		},
		"./components/*": "./src/components/ui/*/index.ts",
		"./utils": "./src/utils.ts",
		"./styles/default": "./styles/default.pcss",
		"./styles/theme": "./styles/theme.pcss",
		"./postcss.config": "./postcss.config.cjs",
		"./tailwind.config": "./tailwind.config.ts"
	},
	"scripts": {
		"format": "prettier --write . && eslint --fix .",
		"lint": "prettier --check . && eslint .",
		"ui:add": "pnpx shadcn-svelte@latest add"
	},
	"dependencies": {
		"@internationalized/date": "3.5.2",
		"bits-ui": "0.20.0",
		"clsx": "2.1.0",
		"cmdk-sv": "0.0.15",
		"embla-carousel-svelte": "^8.0.0",
		"formsnap": "0.5.1",
		"lucide-svelte": "0.359.0",
		"mode-watcher": "0.3.0",
		"paneforge": "0.0.2",
		"svelte-radix": "1.1.0",
		"svelte-sonner": "^0.3.19",
		"sveltekit-superforms": "2.10.6",
		"swiper": "11.0.7",
		"tailwind-merge": "2.2.2",
		"tailwind-variants": "0.2.1",
		"vaul-svelte": "^0.3.0",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@spectacular/eslint-config": "workspace:*",
		"@spectacular/typescript-config": "workspace:*",
		"@tailwindcss/typography": "0.5.10",
		"@tsconfig/svelte": "5.0.2",
		"@types/node": "20.11.30",
		"@typescript-eslint/eslint-plugin": "7.3.1",
		"@typescript-eslint/parser": "7.3.1",
		"cssnano": "6.1.1",
		"eslint": "8.57.0",
		"postcss-import": "16.1.0",
		"postcss-load-config": "5.0.3",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.2.2",
		"prettier-plugin-tailwindcss": "0.5.12",
		"tailwindcss": "3.4.1",
		"typescript": "5.4.3"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0"
	}
}
