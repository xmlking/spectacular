{
  "name": "@spectacular/ui",
  "description": "Shared shadcn UI components",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "svelte": "./index.ts",
      "default": "./index.ts"
    },
    "./components/*": "./src/components/ui/*/index.ts",
    "./utils": "./src/utils.ts",
    "./styles/default": "./styles/default.pcss",
    "./styles/theme": "./styles/theme.pcss",
    "./postcss.config": "./postcss.config.cjs",
    "./tailwind.config": "./tailwind.config.ts"
  },
  "scripts": {
    "clean": "git clean -xdf",
    "format": "biome format --write",
    "lint": "biome lint",
    "test": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "ui:add": "pnpx shadcn-svelte@latest add"
  },
  "dependencies": {
    "@internationalized/date": "3.5.6",
    "bits-ui": "0.21.15",
    "clsx": "2.1.1",
    "cmdk-sv": "0.0.18",
    "embla-carousel-svelte": "8.3.0",
    "formsnap": "1.0.1",
    "lucide-svelte": "0.447.0",
    "mode-watcher": "0.4.1",
    "paneforge": "0.0.6",
    "svelte-radix": "1.1.1",
    "svelte-sonner": "0.3.28",
    "sveltekit-superforms": "2.19.0",
    "swiper": "11.1.14",
    "tailwind-merge": "2.5.2",
    "tailwind-variants": "0.2.1",
    "vaul-svelte": "0.3.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@spectacular/biome-config": "workspace:*",
    "@spectacular/typescript-config": "workspace:*",
    "@sveltejs/kit": "2.6.1",
    "@tailwindcss/typography": "0.5.15",
    "@tsconfig/svelte": "5.0.4",
    "@types/node": "22.7.4",
    "@vitest/coverage-v8": "2.1.1",
    "cssnano": "7.0.6",
    "postcss-import": "16.1.0",
    "postcss-load-config": "6.0.1",
    "svelte": "4.2.19",
    "tailwindcss": "3.4.13",
    "typescript": "5.6.2",
    "vitest": "2.1.1"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^4.0.0"
  }
}
