{
  "name": "@repo/ui",
  "description": "Shared shadcn UI components",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "svelte": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./utils.js": "./src/utils.ts",
    "./actions/*": "./src/actions/*",
    "./attachments/*": "./src/attachments/*",
    "./components/*": "./src/components/*",
    "./styles/*": "./src/styles/*",
    "./transitions/*": "./src/transitions/*",
    "./hooks/*": "./src/hooks/*"
  },
  "scripts": {
    "sv:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "sv:check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "ci": "biome ci",
    "lint": "biome check .",
    "format": "biome check . --write",
    "clean": "git clean -xdf",
    "prepare": "svelte-kit sync || echo ''",
    "sync": "svelte-kit sync",
    "test": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "ui:add": "bunx shadcn-svelte@latest add",
    "ui:update": "bunx shadcn-svelte@latest update"
  },
  "devDependencies": {
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.544.0",
    "@repo/tsconfig": "workspace:*",
    "@repo/utils": "workspace:*",
    "@sveltejs/adapter-auto": "6.1.1",
    "@sveltejs/kit": "catalog:",
    "@sveltejs/vite-plugin-svelte": "catalog:",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "4.1.14",
    "@tanstack/table-core": "8.21.3",
    "bits-ui": "^2.11.0",
    "clsx": "2.1.1",
    "embla-carousel-svelte": "8.6.0",
    "formsnap": "^2.0.1",
    "layerchart": "2.0.0-next.40",
    "mode-watcher": "1.1.0",
    "paneforge": "1.0.2",
    "svelte": "catalog:",
    "svelte-check": "catalog:",
    "svelte-sonner": "^1.0.5",
    "sveltekit-superforms": "2.27.2",
    "tailwind-merge": "catalog:",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "catalog:",
    "tw-animate-css": "catalog:",
    "typescript": "catalog:",
    "vaul-svelte": "^1.0.0-next.7",
    "vite": "catalog:"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  }
}
