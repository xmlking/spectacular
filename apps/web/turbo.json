{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env", ".secrets"]
    },
    "build": {
      "outputs": ["dist/**", ".vercel/output/**"],
      "env": [
        "VERCEL",
        "VERCEL_URL",
        "VERCEL_ENV",
        "BUILD_VERSION",
        "BUILD_TIME",
        "BUN_ENV",
        "SW_DEV",
        "npm_package_version",
        "SITE_URL"
      ]
    },
    "astro": {},
    "preview": {
      "persistent": true
    },
    "test:integration": {
      "dependsOn": ["build"]
    }
  }
}
