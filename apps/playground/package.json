{
	"name": "playground",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "dotenv-run -v -f .env -f .secrets -- vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "dotenv-run -v -f .env -f .secrets -- vite dev",
		"dev:debug": "DEBUG=* dotenv-run -v -f .env -f .secrets -- vite dev",
		"dev:sw": "SW_DEV=true dotenv-run -v -f .env -f .secrets -- vite dev",
		"format": "prettier --write .",
		"lang:lint": "pnpm inlang lint --project ./project.inlang",
		"lang:studio": "pnpm inlang open editor",
		"lang:translate": "pnpm inlang machine translate --project ./project.inlang -f",
		"lang:validate": "pnpm inlang validate --project ./project.inlang",
		"lint": "prettier --check . && eslint .",
		"preview": "dotenv-run -v -f .env -f .secrets -- vite preview",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test:unit:coverage": "vitest run --coverage",
		"test:unit:ui": "vitest --ui"
	},
	"devDependencies": {
		"@floating-ui/dom": "1.6.1",
		"@fontsource-variable/inter": "5.0.16",
		"@inlang/cli": "2.11.0",
		"@inlang/paraglide-js": "1.2.2",
		"@inlang/paraglide-js-adapter-sveltekit": "0.3.3",
		"@skeletonlabs/skeleton": "2.8.0",
		"@skeletonlabs/tw-plugin": "0.3.1",
		"@spectacular/eslint-config": "workspace:*",
		"@spectacular/prettier-config": "workspace:*",
		"@spectacular/skeleton": "workspace:*",
		"@spectacular/typescript-config": "workspace:*",
		"@spectacular/utils": "workspace:*",
		"@sveltejs/adapter-auto": "3.1.1",
		"@sveltejs/adapter-node": "4.0.1",
		"@sveltejs/adapter-vercel": "5.1.0",
		"@sveltejs/enhanced-img": "0.1.8",
		"@sveltejs/kit": "2.5.0",
		"@sveltejs/vite-plugin-svelte": "3.0.2",
		"@tailwindcss/container-queries": "0.1.1",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.10",
		"@tsparticles/engine": "3.1.0",
		"@tsparticles/slim": "3.1.0",
		"@tsparticles/svelte": "3.0.0",
		"@types/d3-scale": "4.0.8",
		"@types/eslint": "8.56.2",
		"@types/node": "20.11.16",
		"@typescript-eslint/eslint-plugin": "6.20.0",
		"@typescript-eslint/parser": "6.20.0",
		"@vercel/analytics": "1.1.2",
		"@vincjo/datatables": "1.14.4",
		"@vitest/coverage-v8": "1.2.2",
		"@xyflow/svelte": "0.0.35",
		"autoprefixer": "10.4.17",
		"d3-array": "3.2.4",
		"d3-scale": "4.0.2",
		"d3-scale-chromatic": "3.0.0",
		"d3-shape": "3.2.0",
		"date-fns": "3.3.1",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.36.0-next.5",
		"formsnap": "0.4.3",
		"layerchart": "0.27.1",
		"lucide-svelte": "0.321.0",
		"postcss": "8.4.33",
		"prettier": "3.2.4",
		"prettier-plugin-svelte": "3.1.2",
		"prettier-plugin-tailwindcss": "0.5.11",
		"svelte": "4.2.9",
		"svelte-adapter-bun": "0.5.1",
		"svelte-check": "3.6.3",
		"svelte-meta-tags": "3.1.0",
