{
	"name": "playground",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --port 3001 --open",
		"dev:debug": "DEBUG=* vite dev",
		"dev:sw": "SW_DEV=true vite dev",
		"build": "vite build",
		"package": "vite package",
		"preview": "NEXTAUTH_URL=http://localhost:4173 vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check --ignore-path=../../.prettierignore . && eslint .",
		"format": "prettier --plugin-search-dir . --write --ignore-path=../../.prettierignore .",
		"test:unit": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:unit:coverage": "vitest run --coverage",
		"test:integration": "playwright test"
	},
	"dependencies": {
		"@floating-ui/dom": "1.5.1",
		"highlight.js": "11.8.0"
	},
	"devDependencies": {
		"@playwright/test": "1.37.1",
		"@skeletonlabs/skeleton": "2.0.0",
		"@skeletonlabs/tw-plugin": "0.1.0",
		"@sveltejs/adapter-auto": "2.1.0",
		"@sveltejs/kit": "1.24.1",
		"@tailwindcss/aspect-ratio": "0.4.2",
		"@tailwindcss/container-queries": "0.1.1",
		"@tailwindcss/forms": "0.5.6",
		"@tailwindcss/typography": "0.5.9",
		"@types/node": "20.5.9",
		"@typescript-eslint/eslint-plugin": "6.6.0",
		"@typescript-eslint/parser": "6.6.0",
		"@vercel/analytics": "1.0.2",
		"autoprefixer": "10.4.15",
		"eslint": "8.48.0",
		"eslint-config-custom": "workspace:*",
		"eslint-config-prettier": "9.0.0",
		"eslint-plugin-svelte": "2.33.0",
		"helpers": "workspace:*",
		"postcss": "8.4.29",
		"prettier": "3.0.3",
		"prettier-plugin-svelte": "3.0.3",
		"prettier-plugin-tailwindcss": "0.5.4",
		"svelte": "4.2.0",
		"svelte-check": "3.5.1",
		"svelte-meta-tags": "^3.0.3",
		"tailwind-config": "workspace:*",
		"tailwind-merge": "1.14.0",
		"tailwindcss": "3.3.3",
		"tailwindcss-animate": "1.0.7",
		"tslib": "2.6.2",
		"typescript": "5.2.2",
		"ui": "workspace:*",
		"vite": "4.4.9",
		"vite-imagetools": "5.0.8",
		"vite-plugin-tailwind-purgecss": "0.1.3",
		"vitest": "0.34.3"
	},
	"optionalDependencies": {
		"@playwright/test": "1.37.1",
		"@vitest/ui": "0.34.3"
	},
	"type": "module"
}
