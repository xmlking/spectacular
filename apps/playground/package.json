{
	"name": "playground",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently \"typesafe-i18n\" \"dotenv-run -vf .env,.secrets -- vite dev\"",
		"dev:debug": "DEBUG=* vite dev",
		"dev:sw": "SW_DEV=true vite dev",
		"build": "pnpm run generate:i18n && dotenv-run -vf .env,.secrets -- vite build",
		"preview": "dotenv-run -vf .env,.secrets -- vite preview",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write . && eslint --fix .",
		"test:unit": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:unit:coverage": "vitest run --coverage",
		"test:integration": "playwright test",
		"generate:svelte": "svelte-kit sync",
		"generate:i18n": "typesafe-i18n --no-watch",
		"generate": "concurrently pnpm:generate:*"
	},
	"devDependencies": {
		"@floating-ui/dom": "1.5.4",
		"@fontsource-variable/inter": "5.0.16",
		"@skeletonlabs/skeleton": "2.7.1",
		"@skeletonlabs/tw-plugin": "0.3.1",
		"@spectacular/eslint-config": "workspace:*",
		"@spectacular/prettier-config": "workspace:*",
		"@spectacular/skeleton": "workspace:*",
		"@spectacular/typescript-config": "workspace:*",
		"@spectacular/utils": "workspace:*",
		"@sveltejs/adapter-auto": "3.1.0",
		"@sveltejs/adapter-node": "3.0.1",
		"@sveltejs/adapter-vercel": "4.0.5",
		"@sveltejs/enhanced-img": "0.1.8",
		"@sveltejs/kit": "2.3.3",
		"@sveltejs/vite-plugin-svelte": "3.0.1",
		"@tailwindcss/container-queries": "0.1.1",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.10",
		"@tsparticles/engine": "3.1.0",
		"@tsparticles/slim": "3.1.0",
		"@tsparticles/svelte": "3.0.0",
		"@types/d3-scale": "4.0.8",
		"@types/node": "20.11.5",
		"@typescript-eslint/eslint-plugin": "6.19.0",
		"@typescript-eslint/parser": "6.19.0",
		"@vercel/analytics": "1.1.1",
		"@vincjo/datatables": "1.14.2",
		"@vitest/coverage-v8": "1.2.1",
		"@xyflow/svelte": "0.0.34",
		"autoprefixer": "10.4.16",
		"d3-array": "3.2.4",
		"d3-scale": "4.0.2",
		"d3-scale-chromatic": "3.0.0",
		"d3-shape": "3.2.0",
		"date-fns": "3.2.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.35.1",
		"formsnap": "0.4.2",
		"layerchart": "0.27.1",
		"lucide-svelte": "0.311.0",
		"postcss": "8.4.33",
		"prettier": "3.2.4",
		"prettier-plugin-svelte": "3.1.2",
		"prettier-plugin-tailwindcss": "0.5.11",
		"svelte": "4.2.9",
		"svelte-adapter-bun": "0.5.1",
