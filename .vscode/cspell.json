{
	"version": "0.2",
	"$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/master/cspell.schema.json",
	"enabledLanguageIds": [
		"asciidoc",
		"css",
		"go",
		"html",
		"javascript",
		"json",
		"markdown",
		"plaintext",
		"python",
		"rust",
		"scss",
		"text",
		"typescript",
		"typescriptreact",
		"yml",
		"proto3",
		"svelte"
	],
	"dictionaries": ["html", "css", "typescript", "node", "softwareTerms", "companies"],
	"words": [
		"codeql",
		"devdeps",
		"FOUC",
		"mkdir",
		"robotstxt",
		"substrs",
		"swyxkit",
		"sveltin",
		"nhost",
		"daisyui",
		"tini",
		"hasura",
		"astro",
		"clsx",
		"combobox",
		"Felte",
		"flowbite",
		"grpc",
		"log",
		"bunx",
		"cmdk",
		"OIDC",
		"zodfd",
		"nixos",
		"Threlte",
		"hasrua",
		"vitebook",
		"TAURI",
		"legos",
		"totp",
		"navi",
		"lucide",
		"degit",
		"sumanth",
		"chinthagunta",
		"astrojs",
		"mdsvex",
		"pcss",
		"shadcn",
		"Konsta",
		"Kometa",
		"buildx",
		"timestamptz",
		"postgresdb",
		"psql",
		"pgcrypto",
		"proto",
		"protobuf",
		"sveltekit",
		"svitejs",
		"tailwindcss",
		"timeout"
	],
	"language": "en,en-GB,en-US",
	// This makes the spell checker more lenient when two words are jammed together.
	"allowCompoundWords": true,

	"useGitignore": true,
	"files": ["**/*.md"],
	"ignoreRegExpList": ["Email", "\\_\\w+", "\\#\\w+"],
	"ignorePaths": [
		".git",
		"**/build/**",
		"**/dist/**",
		"**/static/**",
		"**/node_modules/**",
		"package.json",
		"pnpm-lock.yaml",
		"*.svg",
		".vscode/**",
		"/nhost/",
		"coverage/",
		"TODO/",
		"/docs/images/**",
		"/apps/*/storybook-static/",
		"/apps/*/$houdini/",
		"/apps/*/schema.graphql",
		"CHANGELOG.md",
		"compose.yml",
		"flake.nix"
	]
}
