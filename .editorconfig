# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
# http://jonasbn.github.io/til/editorconfig/markdown.html
trim_trailing_whitespace = false

[{*.yaml, *.yml}]
indent_size = 2
