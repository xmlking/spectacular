# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,mdx}]
max_line_length = 120
# http://jonasbn.github.io/til/editorconfig/markdown.html
trim_trailing_whitespace = false

[{*.yaml, *.yml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{js,ts,svelte}]
quote_type = single
