x-hasura-user-id: 572ad1c0-f97b-4e16-b1f6-8b5ca90f931f

mutation DeletePool($id: uuid!, $deletedAt: timestamptz!) {
	update_pools_by_pk(pk_columns: { id: $id }, _set: { deletedAt: $deletedAt }) {
		displayName
	}
}

