{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.secrets", ".env", ".secrets"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".svelte-kit/**", ".vercel/**"]
    },
    "lint": {},
    "format": {},
    "test": {
      "inputs": ["src/**", "tests/**", "**/.env", "**/.env.test"]
    },
    "test:unit": {},
    "test:unit:coverage": {
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
